// JSONC template for LLM tools (now colocated with LLM layer)
{
    "type": "function",
    "function": {
        "name": "example_tool_name",
        "description": "A short, clear description of what this tool does and when to call it.",
        "parameters": {
            "type": "object",
            "properties": {
                "arg1": {
                    "type": "string",
                    "description": "Explain what arg1 is (e.g., a user ID)."
                },
                "arg2": {
                    "type": "number",
                    "description": "Explain what arg2 is (e.g., a quantity)."
                },
                "optional_flag": {
                    "type": "boolean",
                    "description": "Optional flag to modify behavior.",
                    "default": false
                }
            },
            "required": [
                "arg1",
                "arg2"
            ],
            "additionalProperties": false
        }
    }
}